lovely_loveseat_description = 'Lovely Loveseat.  Tufted polyester blend on wood.  32 inches high x 40 inches wide x 30 inches deep.  Red or white'
stylish_sette_description = 'Stylish Settee.  Faux leather on birch.  29.50 inches high x 54.75 inches wide x 28 inches deep.  Black'
luxurious_lamp_description = 'Luxurious Lamp.  Glass and iron.  36 inches tall.  Brown with cream shade'

lovely_loveseat_price = 254.00
stylish_sette_price = 180.50
luxurious_lamp_price = 52.15
sales_tax = .088
customer_one_total = 0
customer_one_itemization = ''
customer_one_tax = customer_one_total * sales_tax

customer_one_total += lovely_loveseat_price #adds lovely loveseat price variable to customer one total variable
customer_one_itemization += lovely_loveseat_description #adds loveseat description to customer itemization
customer_one_total += luxurious_lamp_price #adds lamp price variable to customer one total variable
customer_one_itemization += luxurious_lamp_description #adds lamp description to customer itemization
customer_one_total += customer_one_tax

print('Customer One Item: ') #prints out reciept header for the items that are being purchased
print(customer_one_itemization) #prints out the items and their descriptions
print(' ')
print('Customer One Total: ') #prints out reciept header for the total cost of the items that are being purchased
print(customer_one_total) #prints out the total cost
