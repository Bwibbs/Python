import random #imports the random package from python library

name = 'Bryce'
question = 'Is this real?'
answer = '' #empty string
random_number = random.randint(1, 9) # variable that has the random.randint function call assigned to it.

print('Magic 8-balls response: ' + answer)
print(random_number) #prints random number
if random_number == 1: #set of if/elif to print all 8-ball answers
  print('Yes-definitely.')
elif random_number == 2:
  print('It is decidedly so.')
elif random_number == 3:
  print('Without a doubt.')
elif random_number == 4:
  print('Reply hazy, try again.')
elif random_number == 5:
  print('Ask again later.')
elif random_number == 6:
  print('Better not tell you now.')
elif random_number == 7:
  print('My sources say no.')
elif random_number == 8:
  print('Outlook not so good.')
elif random_number == 9:
  print('Very doubtful.')
else:
  print('Error')

print('')
print(name + ' asks: ' + question) #prints name variable and asks question variable
